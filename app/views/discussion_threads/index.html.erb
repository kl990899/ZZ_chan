<style>
  body {
    background-color: #fdf9ed;
    font-family: "Arial", sans-serif;
    color: #400000;
  }

  h1 {
    color: #800000;
    margin-bottom: 15px;
  }

  .thread-form, .post-form {
    background-color: #eee5db;
    padding: 12px;
    border: 1px solid #d4bfa3;
    margin-bottom: 20px;
  }

  .thread-list {
    list-style: none;
    padding-left: 0;
  }

  .thread-list li {
    background-color: #fffaf0;
    border: 1px solid #ccbbbb;
    margin-bottom: 20px;
    padding: 10px;
  }

  .thread-list li h2 {
    margin: 0 0 5px 0;
    font-size: 18px;
    color: #800000;
  }

  .thread-list li small {
    color: #888;
    font-size: 12px;
  }

  .post-box {
    border: 1px solid #ccbbbb;
    background-color: #fffaf0;
    padding: 10px;
    margin-top: 10px;
    font-size: 14px;
  }

  .post-header {
    font-size: 0.9em;
    color: #555;
    margin-bottom: 4px;
  }

  .post-id {
    color: #a00;
    font-weight: bold;
    margin-left: 10px;
  }

  .post-name {
    color: #117743;
    font-weight: bold;
  }

  .post-image {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 250px;
    cursor: pointer;
    transition: max-width 0.3s ease;
  }

  .post-image.expanded {
    max-width: 100%;
  }

  .post-video {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 560px;
    max-height: 315px;
    width: 100%;
    height: auto;
    cursor: pointer;
    transition: max-width 0.3s ease;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .post-video.expanded {
    max-width: 100%;
    max-height: none;
  }

  a {
    color: #0000cc;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* 分頁樣式 */
  .pagination-container {
    text-align: center;
    margin: 20px 0;
  }

  .pagination {
    display: inline-block;
    padding: 0;
    margin: 0;
  }

  .pagination li {
    display: inline;
    margin: 0 2px;
  }

  .pagination a, .pagination span {
    display: inline-block;
    padding: 6px 12px;
    margin: 0 2px;
    text-decoration: none;
    border: 1px solid #ddd;
    color: #333;
    background-color: #fff;
    border-radius: 3px;
  }

  .pagination a:hover {
    background-color: #f5f5f5;
    text-decoration: none;
  }

  .pagination .current {
    background-color: #d45f00;
    color: white;
    border-color: #d45f00;
  }

  .pagination .disabled {
    color: #ccc;
    cursor: not-allowed;
  }

  /* YouTube 內嵌樣式 */
  .youtube-container {
    margin-top: 8px;
  }

  .youtube-embed {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 560px;
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    overflow: hidden;
  }

  .youtube-video {
    width: 100%;
    height: 315px;
    max-width: 560px;
    border: none;
    display: block;
  }
</style>

<h1>討論串列表</h1>

<div class="thread-form">
  <h3>開新串</h3>
  <%= form_with url: discussion_threads_path, local: true, multipart: true do |f| %>
    <div>
      <%= f.label :name, "名稱" %>
      <%= f.text_field :name, placeholder: "未填視為匿名" %>
    </div>
    <div>
      <%= f.label :title, "標題" %>
      <%= f.text_field :title, placeholder: "未填視為無題" %>
    </div>
    <div>
      <%= f.label :content, "內容" %><br>
      <%= f.text_area :content, rows: 3 %>
    </div>
    <div>
      <%= f.label :file, "附加檔案 (檔案大小不能超過 5MB)" %><br>
      <div style="margin-top: 5px;">
        <%= f.file_field :file, accept: "image/*,video/*", id: "new_thread_file_input" %>
        <div style="color: #666; font-size: 12px; margin-top: 3px;">
          支援格式：圖片 (JPEG, JPG, PNG, GIF, WebP) 或影片 (MP4, WebM)
        </div>
      </div>
    </div>
    <div>
      <%= f.submit "送出" %>
    </div>
  <% end %>
</div>

<ul class="thread-list">
  <% @discussion_threads.each do |thread| %>
    <li>
      <h2><%= link_to thread.title.presence || "無題", discussion_thread_path(thread) %></h2>
      <small>發文者: <%= thread.name %> | ID: <%= thread.hash_ip %> | <%= pluralize(thread.posts.count, "則回應") %></small>

      <% thread.posts.order(created_at: :desc).first(5).each do |post| %>
        <div class="post-box">
          <div class="post-header">
            <% if post.image.attached? %>
              <% blob = post.image.blob %>
              <% begin %>
                <% dimensions = FastImage.size(blob.service.path_for(blob.key)) %>
              <% rescue %>
                <% dimensions = [nil, nil] %>
              <% end %>
              <span>
                圖片檔名：
                <%= link_to blob.filename.to_s, url_for(post.image), target: "_blank", style: "color:blue" %>
                - (<%= number_to_human_size(blob.byte_size) %>,
                <%= "#{dimensions[0]}x#{dimensions[1]}" if dimensions && dimensions.all? %>)
              </span><br>
            <% elsif post.video.attached? %>
              <% blob = post.video.blob %>
              <span>
                影片檔名：
                <%= link_to blob.filename.to_s, url_for(post.video), target: "_blank", style: "color:blue" %>
                - (<%= number_to_human_size(blob.byte_size) %>)
              </span><br>
            <% end %>
            發表於：<%= post.created_at.strftime("%Y/%m/%d(%a) %H:%M:%S") %>
            <span class="post-id">ID: <%= post.hashed_ip %></span>
          </div>
          <div>
            <span class="post-name"><%= post.name.presence || "無名" %></span>：
            <p><%= simple_format(post.content.presence || "無本文") %></p>
          </div>
          <% if post.image.attached? %>
            <%= image_tag url_for(post.image), class: "post-image" %>
          <% elsif post.video.attached? %>
            <video controls class="post-video" preload="metadata">
              <source src="<%= url_for(post.video) %>" type="<%= post.video.blob.content_type %>">
              您的瀏覽器不支援影片播放。
            </video>
          <% elsif post.has_youtube_links? %>
            <div class="youtube-container">
              <% post.youtube_video_ids.each do |video_id| %>
                <div class="youtube-embed">
                  <iframe src="https://www.youtube.com/embed/<%= video_id %>" 
                          width="560" 
                          height="315" 
                          frameborder="0" 
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                          allowfullscreen 
                          class="youtube-video">
                  </iframe>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

<!-- 分頁按鈕 -->
<div class="pagination-container">
  <%= paginate @discussion_threads %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // 圖片點擊放大功能
    document.querySelectorAll(".post-image").forEach(function (img) {
      img.addEventListener("click", function () {
        img.classList.toggle("expanded");
      });
    });
    
    // 影片點擊放大功能
    document.querySelectorAll(".post-video").forEach(function (video) {
      video.addEventListener("click", function () {
        video.classList.toggle("expanded");
      });
    });
    
    // 新串表單檔案選擇預覽
    const newThreadFileInput = document.getElementById('new_thread_file_input');
    
    newThreadFileInput.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        console.log('選擇的檔案類型：', file.type);
        console.log('檔案大小：', (file.size / 1024 / 1024).toFixed(2) + ' MB');
      }
    });
  });
</script>
