<h1><%= @discussion_thread.title %></h1>

<div class="reply-form">
  <h3>新增回應</h3>
  <%= render 'posts/form', post: @post, discussion_thread: @discussion_thread %>
</div>

<%= link_to "← 回串列表", root_path %>

<h3>回應串</h3>

<% @posts.each do |post| %>
  <div class="post-box">
    <div class="post-header">
      <% if post.image.attached? %>
        <% blob = post.image.blob %>
        <% begin %>
          <% dimensions = FastImage.size(blob.service.path_for(blob.key)) %>
        <% rescue %>
          <% dimensions = [nil, nil] %>
        <% end %>

        <span>
          圖片檔名：
          <%= link_to blob.filename.to_s, url_for(post.image), target: "_blank", style: "color:blue" %>
          - (<%= number_to_human_size(blob.byte_size) %>,
          <%= "#{dimensions[0]}x#{dimensions[1]}" if dimensions && dimensions.all? %>)
        </span><br>
      <% elsif post.video.attached? %>
        <% blob = post.video.blob %>
        <span>
          影片檔名：
          <%= link_to blob.filename.to_s, url_for(post.video), target: "_blank", style: "color:blue" %>
          - (<%= number_to_human_size(blob.byte_size) %>)
        </span><br>
      <% end %>

      發表於：<%= post.created_at.strftime("%Y/%m/%d(%a) %H:%M:%S") %>
      <span class="post-id">ID: <%= post.hashed_ip %></span>
    </div>

    <div>
      <span class="post-name"><%= post.name.presence || "無名" %></span>：
      <p><%= simple_format(post.content.presence || "無本文") %></p>
    </div>

    <% if post.image.attached? %>
      <div>
        <%= image_tag url_for(post.image), class: "post-image" %>
      </div>
    <% elsif post.video.attached? %>
      <div>
        <video controls class="post-video" preload="metadata">
          <source src="<%= url_for(post.video) %>" type="<%= post.video.blob.content_type %>">
          您的瀏覽器不支援影片播放。
        </video>
      </div>
    <% end %>
  </div>
<% end %>

<!-- 分頁按鈕 -->
<div class="pagination-container">
  <%= paginate @posts %>
</div>

<hr>

<%= link_to "← 回串列表", root_path %>

<style>
  body {
    background-color: #fdf9ed;
    font-family: "Arial", sans-serif;
    color: #400000;
  }

  .post-box {
    border: 1px solid #ccbbbb;
    background-color: #fffaf0;
    padding: 10px;
    margin-bottom: 10px;
    font-size: 14px;
  }

  .post-header {
    font-size: 0.9em;
    color: #555;
    margin-bottom: 4px;
  }

  .post-id {
    color: #a00;
    font-weight: bold;
    margin-left: 10px;
  }

  .post-name {
    color: #117743;
    font-weight: bold;
  }

  .post-image {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 250px;
    cursor: pointer;
    transition: max-width 0.3s ease;
  }

  .post-image.expanded {
    max-width: 100%;
  }

  .post-video {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 400px;
    width: 100%;
    height: auto;
    cursor: pointer;
    transition: max-width 0.3s ease;
  }

  .post-video.expanded {
    max-width: 100%;
  }

  a {
    color: #0000cc;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1, h3 {
    color: #800000;
  }

  .reply-form {
    background-color: #eee5db;
    padding: 12px;
    border: 1px solid #d4bfa3;
    margin-bottom: 20px;
  }

  /* 分頁樣式 */
  .pagination-container {
    text-align: center;
    margin: 20px 0;
  }

  .pagination {
    display: inline-block;
    padding: 0;
    margin: 0;
  }

  .pagination li {
    display: inline;
    margin: 0 2px;
  }

  .pagination a, .pagination span {
    display: inline-block;
    padding: 6px 12px;
    margin: 0 2px;
    text-decoration: none;
    border: 1px solid #ddd;
    color: #333;
    background-color: #fff;
    border-radius: 3px;
  }

  .pagination a:hover {
    background-color: #f5f5f5;
    text-decoration: none;
  }

  .pagination .current {
    background-color: #d45f00;
    color: white;
    border-color: #d45f00;
  }

  .pagination .disabled {
    color: #ccc;
    cursor: not-allowed;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // 圖片點擊放大功能
    document.querySelectorAll(".post-image").forEach(function (img) {
      img.addEventListener("click", function () {
        img.classList.toggle("expanded");
      });
    });
    
    // 影片點擊放大功能
    document.querySelectorAll(".post-video").forEach(function (video) {
      video.addEventListener("click", function () {
        video.classList.toggle("expanded");
      });
    });
  });
</script>