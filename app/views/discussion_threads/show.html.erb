<h1><%= @discussion_thread.title %></h1>

<div class="reply-form">
  <h3>新增回應</h3>
  <%= render 'posts/form', post: @post, discussion_thread: @discussion_thread %>
</div>

<%= link_to "← 回串列表", root_path %>

<h3>回應串</h3>

<% @posts.each do |post| %>
  <div class="post-box">
    <div class="post-header">
      <% if post.image.attached? %>
        <% blob = post.image.blob %>
        <% begin %>
          <% dimensions = FastImage.size(blob.service.path_for(blob.key)) %>
        <% rescue %>
          <% dimensions = [nil, nil] %>
        <% end %>

        <span>
          檔名：
          <%= link_to blob.filename.to_s, url_for(post.image), target: "_blank", style: "color:blue" %>
          - (<%= number_to_human_size(blob.byte_size) %>,
          <%= "#{dimensions[0]}x#{dimensions[1]}" if dimensions.all? %>)
        </span><br>
      <% end %>

      發表於：<%= post.created_at.strftime("%Y/%m/%d(%a) %H:%M:%S") %>
      <span class="post-id">ID: <%= post.hashed_ip %></span>
    </div>

    <div>
      <span class="post-name"><%= post.name.presence || "無名" %></span>：
      <p><%= simple_format(post.content.presence || "無本文") %></p>
    </div>

    <% if post.image.attached? %>
      <div>
        <%= image_tag url_for(post.image), class: "post-image" %>
      </div>
    <% end %>
  </div>
<% end %>

<hr>

<%= link_to "← 回串列表", root_path %>

<style>
  body {
    background-color: #fdf9ed;
    font-family: "Arial", sans-serif;
    color: #400000;
  }

  .post-box {
    border: 1px solid #ccbbbb;
    background-color: #fffaf0;
    padding: 10px;
    margin-bottom: 10px;
    font-size: 14px;
  }

  .post-header {
    font-size: 0.9em;
    color: #555;
    margin-bottom: 4px;
  }

  .post-id {
    color: #a00;
    font-weight: bold;
    margin-left: 10px;
  }

  .post-name {
    color: #117743;
    font-weight: bold;
  }

  .post-image {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 250px;
    cursor: pointer;
    transition: max-width 0.3s ease;
  }

  .post-image.expanded {
    max-width: 100%;
  }

  a {
    color: #0000cc;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1, h3 {
    color: #800000;
  }

  .reply-form {
    background-color: #eee5db;
    padding: 12px;
    border: 1px solid #d4bfa3;
    margin-bottom: 20px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".post-image").forEach(function (img) {
      img.addEventListener("click", function () {
        img.classList.toggle("expanded");
      });
    });
  });
</script>