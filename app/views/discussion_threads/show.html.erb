<h1><%= @discussion_thread.title %></h1>

<div class="post-form">
  <h3>新增回應</h3>
  <%= render 'posts/form', post: @post, discussion_thread: @discussion_thread %>
</div>

<%= link_to "← 回串列表", root_path, class: "btn btn-secondary" %>

<h3>回應串</h3>

<% @posts.order(created_at: :asc).each do |post| %>
  <% post_data = post_data(post, view: :show) %>
  <div class="post-box">
    <div class="post-header">
      <% if post_data[:has_image] %>
        <span>
          圖片檔名：
          <%= link_to post_data[:image_filename], post_data[:image_url], target: "_blank", class: "file-link" %>
          - (<%= number_to_human_size(post_data[:image_byte_size]) %>)
        </span><br>
      <% elsif post_data[:has_video] %>
        <span>
          影片檔名：
          <%= link_to post_data[:video_filename], post_data[:video_url], target: "_blank", class: "file-link" %>
          - (<%= number_to_human_size(post_data[:video_byte_size]) %>)
        </span><br>
      <% end %>

      發表於：<%= post_data[:created_at] %>
      <span class="post-id">ID: <%= post_data[:hashed_ip] %></span>
    </div>

    <div class="post-content">
      <span class="post-name"><%= post_data[:name].presence || "無名" %></span>：
      <p><%= simple_format(post_data[:content].presence || "無本文") %></p>
    </div>
    <% if post_data[:has_image] %>
      <div>
        <img src="<%= post_data[:image_url] %>" class="post-image" alt="圖片">
      </div>
    <% elsif post_data[:has_video] %>
      <div>
        <video controls class="post-video" preload="metadata">
          <source src="<%= post_data[:video_url] %>" type="<%= post_data[:video_content_type] %>">
          您的瀏覽器不支援影片播放。
        </video>
      </div>
    <% elsif post_data[:has_youtube_links] %>
      <div class="youtube-container">
        <% post_data[:youtube_video_ids].each do |video_id| %>
          <div class="youtube-embed">
            <iframe src="https://www.youtube.com/embed/<%= video_id %>" 
                    width="560" 
                    height="315" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen 
                    class="youtube-video">
            </iframe>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<!-- 分頁按鈕 -->
<div class="pagination-container">
  <%= paginate @posts %>
</div>

<hr>

<%= link_to "← 回串列表", root_path %>

<style>
  body {
    background-color: #fdf9ed;
    font-family: "Arial", sans-serif;
    color: #400000;
  }

  .post-box {
    border: 1px solid #ccbbbb;
    background-color: #fffaf0;
    padding: 10px;
    margin-bottom: 10px;
    font-size: 14px;
  }

  .post-header {
    font-size: 0.9em;
    color: #555;
    margin-bottom: 4px;
  }

  .post-id {
    color: #a00;
    font-weight: bold;
    margin-left: 10px;
  }

  .post-name {
    color: #117743;
    font-weight: bold;
  }

  .post-image {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 250px;
    cursor: pointer;
    transition: max-width 0.3s ease;
  }

  .post-image.expanded {
    max-width: 100%;
  }

  .post-video {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 560px;
    max-height: 315px;
    width: 100%;
    height: auto;
    cursor: pointer;
    transition: max-width 0.3s ease;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .post-video.expanded {
    max-width: 100%;
    max-height: none;
  }

  a {
    color: #0000cc;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1, h3 {
    color: #800000;
  }

  .reply-form {
    background-color: #eee5db;
    padding: 12px;
    border: 1px solid #d4bfa3;
    margin-bottom: 20px;
  }

  /* 分頁樣式 */
  .pagination-container {
    text-align: center;
    margin: 20px 0;
  }

  .pagination {
    display: inline-block;
    padding: 0;
    margin: 0;
  }

  .pagination li {
    display: inline;
    margin: 0 2px;
  }

  .pagination a, .pagination span {
    display: inline-block;
    padding: 6px 12px;
    margin: 0 2px;
    text-decoration: none;
    border: 1px solid #ddd;
    color: #333;
    background-color: #fff;
    border-radius: 3px;
  }

  .pagination a:hover {
    background-color: #f5f5f5;
    text-decoration: none;
  }

  .pagination .current {
    background-color: #d45f00;
    color: white;
    border-color: #d45f00;
  }

  .pagination .disabled {
    color: #ccc;
    cursor: not-allowed;
  }

  /* YouTube 內嵌樣式 */
  .youtube-container {
    margin-top: 8px;
  }

  .youtube-embed {
    margin-top: 8px;
    border: 1px solid #ddd;
    max-width: 560px;
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    overflow: hidden;
  }

  .youtube-video {
    width: 100%;
    height: 315px;
    max-width: 560px;
    border: none;
    display: block;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // 圖片點擊放大功能
    document.querySelectorAll(".post-image").forEach(function (img) {
      img.addEventListener("click", function () {
        img.classList.toggle("expanded");
      });
    });
    
    // 影片點擊放大功能
    document.querySelectorAll(".post-video").forEach(function (video) {
      video.addEventListener("click", function () {
        video.classList.toggle("expanded");
      });
    });
  });
</script>