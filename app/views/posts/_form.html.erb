<div class="post-form">
  <%= form_with(model: [discussion_thread, post], local: true, html: { multipart: true }) do |f| %>
    <div class="form-group">
      <label class="form-label">名稱</label>
      <%= f.text_field :name, value: post.name || "", class: "form-control", placeholder: "留空則顯示為匿名" %>
    </div>

    <div class="form-group">
      <label class="form-label">內文</label>
      <%= f.text_area :content, rows: 5, class: "form-control", placeholder: "請輸入回應內容..." %>
    </div>

    <div class="form-group">
      <label class="form-label">附加檔案 (檔案大小不能超過 5MB)</label>
      <%= f.file_field :file, accept: "image/*,video/*", class: "form-control" %>
      <small style="color: var(--text-muted); font-size: 0.9rem;">
        支援格式：圖片 (JPEG, JPG, PNG, GIF, WebP) 或影片 (MP4, WebM)
      </small>
    </div>

    <div class="form-group">
      <%= f.submit "送 出", class: "btn" %>
    </div>
  <% end %>
</div>