<div class="post-form">
<h3 class="form-title">新增回應</h3>
  <%= form_with(model: [discussion_thread, post], local: true, html: { multipart: true }) do |f| %>
    <div class="form-group">
      <label class="form-label">名稱</label>
      <%= f.text_field :name, value: post.name || "", class: "form-control", placeholder: "留空則顯示為匿名" %>
    </div>
    <div class="form-group">
      <label class="form-label">內文</label>
      <%= f.text_area :content, rows: 3, class: "form-control", placeholder: "請輸入回應內容..." %>
    </div>
    <div class="form-group file-upload-group">
      <label class="form-label">附加檔案 (檔案大小不能超過 5MB)</label>
      <div class="file-upload-container">
        <%= f.file_field :file, accept: "image/*,video/*", class: "form-control file-input" %>
        <small class="file-format-text">支援格式：圖片 (JPEG, JPG, PNG, GIF, WebP) 或影片 (MP4, WebM)</small>
      </div>
      <div class="submit-container">
        <%= f.submit "送出", class: "btn submit-btn" %>
      </div>
    </div>
  <% end %>
</div>