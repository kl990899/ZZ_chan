<div class="post-form-box">

  <%= form_with(model: [discussion_thread, post], local: true, html: { multipart: true }) do |f| %>
    <div class="form-row">
      <label class="form-label">名稱</label>
      <%= f.text_field :name, value: post.name || "", class: "form-input" %>
    </div>

    <div class="form-row">
      <label class="form-label">內文</label>
      <%= f.text_area :content, rows: 5, class: "form-textarea" %>
    </div>

    <div class="form-row">
      <label class="form-label">附加圖檔</label>
      <%= f.file_field :image %>
    </div>

    <div class="form-submit">
      <%= f.submit "送 出", class: "submit-button" %>
    </div>
  <% end %>
</div>

<style>
  .post-form-box {
    border: 1px solid #d48550;
    background-color: #fdf9ed;
    padding: 0;
    margin-bottom: 30px;
    width: 100%;
    max-width: 700px;
  }

  .form-title {
    background-color: #d45f00;
    color: white;
    font-weight: bold;
    padding: 4px 10px;
    font-size: 15px;
    text-align: left;
  }

  .form-row {
    display: flex;
    align-items: flex-start;
    padding: 6px 10px;
    background-color: #fffaf0;
    border-bottom: 1px solid #e0d0c0;
  }

  .form-label {
    display: inline-block;
    width: 90px;
    font-weight: bold;
    color: #663300;
    margin-top: 5px;
  }

  .form-input {
    flex: 1;
    padding: 4px;
    font-size: 14px;
  }

  .form-textarea {
    flex: 1;
    padding: 4px;
    font-size: 14px;
    resize: vertical;
  }

  .form-submit {
    padding: 10px;
    text-align: center;
    background-color: #fffaf0;
  }

  .submit-button {
    padding: 4px 12px;
    font-size: 14px;
    background-color: #eee5db;
    border: 1px solid #d4bfa3;
    cursor: pointer;
  }

  .submit-button:hover {
    background-color: #f8f1e6;
  }
</style>
