<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
  
  <!-- 首頁 -->
  <url>
    <loc><%= root_url %></loc>
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- 討論串列表頁 -->
  <url>
    <loc><%= discussion_threads_url %></loc>
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- 各個討論串 -->
  <% @discussion_threads.each do |thread| %>
    <url>
      <loc><%= discussion_thread_url(thread) %></loc>
      <lastmod><%= thread.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.8</priority>
      
      <!-- 暫時移除媒體內容以避免 URL 錯誤 -->
      <!-- 討論串圖片和影片將在 URL 問題解決後重新添加 -->
    </url>
  <% end %>

  <!-- 靜態頁面 -->
  <url>
    <loc><%= robots_url %></loc>
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.3</priority>
  </url>

</urlset>